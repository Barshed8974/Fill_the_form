<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:backgroundTint="@color/teal_700"
        android:drawableStart="@drawable/ic_baseline_arrow_back_24"
        android:textSize="40sp"
        />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rectangle" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:layout_marginStart="310sp"
        android:background="@drawable/ic_baseline_check_24"
        android:gravity="end" />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:padding="10sp"
        android:background="@drawable/rectangle"
        android:text="   Organaisation Name"
        android:textColor="@color/white"
        android:textSize="15sp"
        />
    <EditText
        android:id="@+id/etOrgName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:background="@drawable/rectangle"
        android:hint="      Abc Ltd."
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_below="@id/etOrgName"
        android:background="@drawable/rectangle"
        />
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/etOrgName"
        android:background="@color/black"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        />
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view3"
        android:layout_marginTop="10sp">
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:text="Name:"
            android:textSize="20sp"
            />

        <EditText
            android:layout_width="300sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginTop="10sp">
        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_phone_24"
            android:text="Phone No.:"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="258sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_marginTop="10sp">
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:text=" Email:"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/etMail"
            android:layout_width="300sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_my_location_24"
            android:text=" Address:"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/etAdd"
            android:layout_width="280sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line4"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_factory_industrial_svgrepo_com"
            android:text="Manufacturer:"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/etMan"
            android:layout_width="230sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line5"
        android:layout_marginTop="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_calculate_24"
            android:text=" Tax id:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etTax"
            android:layout_width="290sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line6"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_fingerprint"
            android:text=" Company id:"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/etCopm"
            android:layout_width="240sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</RelativeLayout>